<!-- candy.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Sugar Roids App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Sugar Roids App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addCandy">Add Candy</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container mt-4">
  <div class="user-info text-end mb-3">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
  </div>

  <div class="text-center mb-4">
    <h2 class="fw-bold"><%= candy.candyName %> Details</h2>
  </div>

  <% if (candy) { %>
    <div class="row align-items-center">
      <div class="col-md-4 text-center mb-3">
        <img src="../images/<%= candy.image %>" alt="<%= candy.candyName %>" class="img-fluid rounded shadow" style="max-height: 500px;">
      </div>

      
      <div class="col-md-8">
        <div class="mb-3">
          <h4 class="text-muted">Candy Name:</h4>
          <p class="fs-5"><%= candy.candyName %></p>
        </div>

        <div class="mb-3">
          <h4 class="text-muted">Description:</h4>
          <p><%= candy.description %></p>
        </div>

        <div class="mb-3">
          <h4 class="text-muted">Quantity Available:</h4>
          <p><%= candy.quantity %> Packs</p>
        </div>

        <div class="mb-3">
          <h4 class="text-muted">Price:</h4>
          <p class="fs-5 fw-bold text-success">$<%= candy.price.toFixed(2) %></p>
        </div>

        
        <div class="mb-3">
          <h4 class="text-muted">Ingredients & Allergens:</h4>
          <p><%= candy.ingredients %> <br> <strong>Allergens:</strong> <%= candy.allergens %></p>
        </div>

        
        <div class="mb-3">
          <h4 class="text-muted">Storage Instructions:</h4>
          <p><%= candy.storageInstructions %></p>
        </div>

        
        <div class="mb-3">
          <h4 class="text-muted">Made In:</h4>
          <p><%= candy.madeIn %></p>
        </div>

  
      </div>
    </div>
  <% } else { %>
    <div class="alert alert-warning text-center mt-4">
      <p>No candy found.</p>
    </div>
  <% } %>

  <div class="mt-4">
    <% if (user.role === "admin") { %>
      <a href="/inventory" class="btn btn-secondary">Back to Inventory</a>
    <% } else { %>
      <a href="/shopping" class="btn btn-primary">Back to Shop</a>
    <% } %>
  </div>
</div>

    
</body>
</html>
