<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Sugar Roids App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Sugar Roids App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addCandy">Add Product</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container my-5">
  <div class="alert alert-info shadow-sm rounded-pill text-center fw-semibold">
    Welcome, <%= user.username %> (<%= user.role %>)
  </div>

  <div class="text-center mb-4">
    <h2 class="fw-bold">Sugar Roids Database</h2>
    <p class="text-muted">Manage your sweet inventory below</p>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th scope="col">Candy Name</th>
              <th scope="col">Candy Image</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < products.length; i++) { %>
              <tr>
                <td>
                  <a href="/candy/<%= products[i].candyId %>" class="text-decoration-none fw-medium"><%= products[i].candyName %> </a>
                </td>
                <td>
                  <img src="images/<%= products[i].image %>" class="img-fluid rounded" style="max-width: 80px;">
                </td>
                <td>
                  <span class="badge bg-dark"><%= products[i].quantity %></span>
                </td>
                <td>
                  <strong>$<%= products[i].price.toFixed(2) %></strong>
                </td>
                <td>
                  <a href="/updateProductCandy/<%= products[i].candyId %>" class="btn btn-sm btn-warning">Edit</a>
                </td>
                <td>
                  <a href="/deleteProduct/<%= products[i].candyId %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>